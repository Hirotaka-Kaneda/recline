{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "none",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "css": {
    "formatter": {
      "indentWidth": 2
    },
    "parser": {
      "cssModules": true
    }
  },
  "graphql": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noDefaultExport": "error",
        "useDefaultSwitchClause": "error",
        "useFilenamingConvention": "error",
        "useForOf": "error",
        "useNamingConvention": "error",
        "useThrowOnlyError": "error",
        "noYodaExpression": "error"
      },
      "nursery": {
        "useExplicitType": "error",
        "useConsistentMemberAccessibility": {
          "level": "error",
          "options": {
            "accessibility": "explicit"
          }
        }
      },
      "performance": {
        "noBarrelFile": "error"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  }
}
